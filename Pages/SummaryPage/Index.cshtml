@page
@model PrototypeRazorAuth.Pages.SummaryPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;">Summary</h1>

<br />
<img src="@Model.Summary[0].ProfileImage" alt="Cage">
<br />
<h3 style="text-align: center;">@Model.Summary[0].Name</h3>
<p style="text-align: center;">@Model.Summary[0].Title</p>
<hr />

<div style="display: flex; justify-content: flex-end;">
    <a class="btn btn-primary" asp-page="/DashboardPage/Index">Back to Dashboard</a>
</div>


<select class="form-select w-auto" name="select-year">
    <option value="">-- Select Year --</option>
    <option value="2020">2020</option>
    <option value="2021">2021</option>
    <option value="2022">2022</option>
    <option value="2023">2023</option>
    <option value="2024">2024</option>
    <option value="2025">2025</option>
</select>


<div class="my-box3">
    <h3 style="text-align: center;">Stats</h3>
    <div class="col">
        <p>Goals Completed This Year: @Model.Summary[0].GoalsCompleted</p>
        <p>Competencies Confident: @Model.Summary[0].NumConfidentCompentencies</p>
        <p>Competencies Emerging: @Model.Summary[0].NumEmergingCompentencies</p>
        <p>@Model.Summary[0].LogbookCompleted</p>
    </div>

</div>

<div class="text-center">
    <a class="btn btn-secondary" style="text-align: center;" asp-page="/ExportPage/Index">Export</a>
</div>


