@page
@model PrototypeRazorAuth.Pages.ProfilePage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/ProfilePage/Index">Profile</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/DashboardPage/Index">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/GoalsPage/Index">Goals</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/NetworkingPage/Index">Networking</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CompetenciesPage/Index">Competencies</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-page="/CDLPage/Index">CDL</a>
    </li>
</ul>


<div class="container" style="margin-top: 50px; margin-right: 40px;">
    <div class="mr-6">
        <div class="container">
            <svg class="small-svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <div class="col">
                <h1>@Model.Profile[0].Name</h1>
                <p>@Model.Profile[0].Title</p>
            </div>
        </div>
    </div>


    <label for="box3" style="position: absolute; top: 130px; margin-right: 490px; margin-left: 600px;">My Links</label>
    <div class="my-box3">
        <div class="col">
            <ul>
                <li>
                    <a href="@Model.Profile[0].LinkedIn">LinkedIn</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].Resume">Resume</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].SupportingDocuments">Supporting Documents</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].ProfessionalDocuments">Professional Records and Documents</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].Link1">Link 1</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].Link2">Link 2</a>
                </li>
                <li>
                    <a href="@Model.Profile[0].Link3">Link 3</a>
                </li>
            </ul>
        </div>
    </div>

    <label for="box1" style="position: absolute; top: 410px; margin-right: 490px; margin-left: 10px;">Personal Information</label>
    <div class="my-box" id="box1">
        <p>@Model.Profile[0].Introduction</p>
    </div>

    <label for="box2" style="position: absolute; top: 410px; margin-right: 200px; margin-left: 600px;">Upcoming Actions for Personal Development</label>
    <div class="my-box2" id="box2">
        <ul>
            <li>
                <p>Climb a tree.</p>
            </li>
        </ul>
    </div>
</div>
